@using PagedList.Mvc;
@using PagedList;
@model IPagedList<DoAn_TranTheAnh_2020607026.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div class="main-content-inner">
    <!-- main-content-wrap -->
    <div class="main-content-wrap">
        <div class="flex items-center flex-wrap justify-between gap20 mb-27">
            <h3>All User</h3>
            <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                <li>
                    <a href="index.html"><div class="text-tiny">Dashboard</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <a href="#"><div class="text-tiny">User</div></a>
                </li>
                <li>
                    <i class="icon-chevron-right"></i>
                </li>
                <li>
                    <div class="text-tiny">All User</div>
                </li>
            </ul>
        </div>
        <!-- all-user -->
        <div class="wg-box">
            <div class="flex items-center justify-between gap10 flex-wrap">
                <div class="wg-filter flex-grow">
                    <form class="form-search">
                        <fieldset class="name">
                            <input type="text" placeholder="Search here..." class="" name="name" tabindex="2" value="" aria-required="true" required="">
                        </fieldset>
                        <div class="button-submit">
                            <button class="" type="submit"><i class="icon-search"></i></button>
                        </div>
                    </form>
                </div>
                <a class="tf-button style-1 w208" href="add-new-user.html"><i class="icon-plus"></i>Add new</a>
            </div>
            <div class="wg-table table-all-user">
                <ul class="table-title flex gap20 mb-14">
                    <li>
                        <div class="body-title">User</div>
                    </li>
                    <li>
                        <div class="body-title">Phone</div>
                    </li>
                    <li>
                        <div class="body-title">Role</div>
                    </li>
                   
                    <li>
                        <div class="body-title">Action</div>
                    </li>
                </ul>
                <ul class="flex flex-column">
                    @foreach (var item in Model)
                    {
                        <li class="user-item gap14">
                            <div class="image">
                                <img src="~/assets/icon/user.png" alt="">
                            </div>
                            <div class="flex items-center justify-between gap20 flex-grow">
                                <div class="name">
                                    <a href="#" class="body-title-2">@item.Username</a>
                                    <div class="text-tiny mt-3">@item.Email</div>
                                </div>
                                <div class="body-text">@item.Phone</div>
                                <div class="body-text">@item.Role.RoleName</div>
                                
                                <div class="list-icon-function">
                                    <div class="item eye">
                                        <a href="@Url.Action("Details","Users", new {id=item.UserID})">
                                            <i class="icon-eye"></i>
                                        </a>

                                    </div>
                                    <div class="item edit">
                                        <a href="@Url.Action("Edit","Users", new {id=item.UserID})">
                                            <i class="icon-edit-3"></i>
                                        </a>
                                    </div>
                                    <div class="item trash">
                                        <a href="@Url.Action("Delete","Users", new {id=item.UserID})">
                                            <i class="icon-trash-2"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>

                    }

                </ul>
            </div>
            <div class="divider"></div>
            <div class="flex items-center justify-between flex-wrap gap10">
                <div class="text-tiny">Showing 8 entries</div>
                <ul class="wg-pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, PageSize = 8 }))
                </ul>
            </div>
        </div>
        <!-- /all-user -->
    </div>
    <!-- /main-content-wrap -->
</div>
