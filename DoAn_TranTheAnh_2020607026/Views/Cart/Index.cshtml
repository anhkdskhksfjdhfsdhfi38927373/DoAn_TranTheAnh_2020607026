@model DoAn_TranTheAnh_2020607026.Models.ListCart
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPage.cshtml";

}
@if (Model != null)
{
    <head>
        <!-- SPECIFIC CSS -->
        <link href="~/assets/css/cart.css" rel="stylesheet">

        <!-- YOUR CUSTOM CSS -->
        <link href="~/assets/css/custom.css" rel="stylesheet">
    </head>
    <table class="table table-striped cart-list">
        <thead>
            <tr>
                <th>
                    Sản phẩm
                </th>

                <th>
                    Gía
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Size
                </th>

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Listcart)
            {
                <tr>
                    <td>
                        <div class="thumb_cart">
                            <img src="~/assets/images/product/@item.Product.Images" data-src="img/products/shoes/1.jpg" class="lazy" alt="Image">
                        </div>
                        <span class="item_cart">@item.Product.ProductName</span><br />

                    </td>
                    <td>
                        <strong>@item.Product.newprice(item.Product.Price, item.Product.SaleOff)</strong>
                    </td>
                    <td>
                        <div class="numbers-row">
                          
                                
                                <input type="text" value="@item.QuantityProductSale" id="quantity_1" class="qty2" name="quantity_1">
                       
                                <a href="@Url.Action("UpdateCartup","Cart",new {id = item.Product.ProductID})">
                                    <div class="inc button_inc" onclick="Functionup()">+</div>
                                </a>
                                <a href="@Url.Action("UpdateCartdown","Cart",new {id = item.Product.ProductID})">
                                    <div class="dec button_inc" onclick="Functiondown()">-</div>
                                    </a>
                                  

                            </div>


                    </td>
                    <td colspan="2" style="width:100px;">
                        @{
                            double TotalofProduct = item.Product.newprice(item.Product.Price, item.Product.SaleOff) * item.QuantityProductSale;
                        }

                    </td>

                    <td class="options">
                        <a href="#"><i class="ti-trash"></i></a>
                    </td>
                </tr>
                 }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="float:left">Tổng tiền: @Model.Total_Money() </td>
            </tr>

        </tfoot>
    </table>
                            
  
}


