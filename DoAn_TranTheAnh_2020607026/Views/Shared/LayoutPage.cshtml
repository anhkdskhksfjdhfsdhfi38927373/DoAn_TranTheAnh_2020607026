<body>

    <div id="page">

        <header class="version_1">
            <div class="layer"></div><!-- Mobile menu overlay mask -->
            <div class="main_header" style="background-color:white;">
                <div class="container" >
                    <div class="row small-gutters">
                        <div class="col-xl-3 col-lg-3 d-lg-flex align-items-center">
                            <div id="logo" style="box-sizing:border-box;">
                                <a href="@Url.Action("Index","Page")" ><img src="~/assets/images/logo/logo.jpg" alt="" style="width:95px; height:70px;"></a>
                            </div>
                        </div>
                        <nav class="col-xl-6 col-lg-7" >
                            <a class="open_close" href="~/assets/#0">
                                <div class="hamburger hamburger--spin">
                                    <div class="hamburger-box">
                                        <div class="hamburger-inner"></div>
                                    </div>
                                </div>
                            </a>
                            <!-- Mobile menu button -->
                            <div class="main-menu">
                                <div id="header_menu">
                                    <a href="~/assets/index.html"><img src="~/assets/img/logo_black.svg" alt="" width="100" height="35"></a>
                                    <a href="~/assets/#" class="open_close" id="close_in"><i class="ti-close"></i></a>
                                </div>
                                <ul style="text-align:center;">
                                    <li class="submenu">
                                        <a href="#0" style="color:#000" class="show-submenu">Danh mục</a>
                                        <ul style="text-align:left;">

                                            @Html.Action("listcategory_menu", "Page")
                                        </ul>
                                    </li>
                                    
                                    <li class="submenu">
                                        <a href="#0" style="color:#000" class="show-submenu">Danh sách cửa hàng</a>
                                        <ul style="text-align:left;">
                                            <li><a href="#0">Hà Nội</a></li>
                                            <li><a href="#0">Đà Nẵng</a></li>
                                            <li><a href="#0">TP. Hồ Chí Minh</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        @{
                                            if (Session["Admin"] != null)
                                            {
                                                <a style="color:#000" href="@Url.Action("Dashboard","Admin")">Quản lý</a>
                                            }
                                        }

                                    </li>
                                   
                                </ul>   
                            </div>
                            <!--/main-menu -->
                        </nav>
                        <div class="col-xl-3 col-lg-2 d-lg-flex align-items-center justify-content-end text-end">
                            @if (Session["UserID"] == null)
                            {
                                <a class="phone_top" href="@Url.Action("Login","Page")" style="color:black;"><strong><img src="~/assets/icon/login.png" style="width:30px; height:30px;" />Đăng nhập</strong></a>
                            }
                            @if (Session["UserID"] != null)
                            {
                                <a class="phone_top" href="@Url.Action("Logout","Page")" style="color:black;"><strong><img src="~/assets/icon/logout.png" style="width:30px; height:30px;" />Đăng xuất</strong></a>
                            }


                        </div>
                    </div>
                    <!-- /row -->
                </div>
            </div>
            <!-- /main_header -->

            <div class="main_nav Sticky" >
                <div class="container">
                    <div class="row small-gutters">
                        <div class="col-xl-3 col-lg-3 col-md-3">

                        </div>
                      
                            <div class="col-xl-6 col-lg-7 col-md-6 d-none d-md-block">
                                <div class="custom-search-input">
                                    @using (Html.BeginForm("Search", "Page", FormMethod.Post))
                                    {
                                        <input type="text" name="SearchString" placeholder="Tìm kiếm sản phẩm">
                                        <button type="submit"><i class="header-icon_search_custom"></i></button>
                                    }
                                    </div>
                            </div>
                        
                        <div class="col-xl-3 col-lg-2 col-md-3">
                            <ul class="top_tools">
                                <li>
                                    <div class="dropdown dropdown-cart">
                                        <a href="/Cartbuy/ShowCart" class="cart_bt"><strong>@Html.Action("TotalQuantity", "Cartbuy")</strong></a>
                                    </div>
                                    <!-- /dropdown-cart-->
                                </li>

                                <li>
                                    <div class="dropdown dropdown-access">
                                        <a href="/Page/Account" class="access_link"><span>Account</span></a>
                                    </div>
                                    <!-- /dropdown-access-->
                                </li>

                            </ul>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <div class="search_mob_wp">
                    @using (Html.BeginForm("Search", "Page", FormMethod.Post))
                    {
                        <input type="text" name="SearchString" placeholder="Tìm kiếm sản phẩm">
                        <button type="submit"><i class="header-icon_search_custom"></i></button>
                    }
                </div>
                <!-- /search_mobile -->
            </div>
            <!-- /main_nav -->
        </header>
        <!-- /header -->
        @RenderBody()
