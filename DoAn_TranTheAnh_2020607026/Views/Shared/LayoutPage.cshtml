                            <ul>
                                <li><a href="#">Thông tin</a></li>
                    
                                <li><a href="#">Trợ giúp</a></li>
                                
                                <li><a href="#">Blog</a></li>
                                <li><a href="#">Liên hệ</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-bs-target="#collapse_2">Danh mục</h3>
                        <div class="collapse dont-collapse-sm links" id="collapse_2">
                            <ul>
                                @Html.Action("listcategory_menu", "Page")
                            </ul>
                            
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-bs-target="#collapse_3">Liên hệ</h3>
                        <div class="collapse dont-collapse-sm contacts" id="collapse_3">
                            <ul>
                                <li><i class="ti-home"></i>Số 2-Ngõ 27 đường bắc lai xá<br>Kim Chung-Hoài Đức-Hà Nội</li>
                                <li><i class="ti-headphone-alt"></i>1900 2300</li>
                                <li><i class="ti-email"></i><a href="#0">Info@fashion.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-bs-target="#collapse_4">Giữ liên hệ với chúng tôi</h3>
                        <div class="collapse dont-collapse-sm" id="collapse_4">
                            <div id="newsletter">
                                <div class="form-group">
                                    <input type="email" name="email_newsletter" id="email_newsletter" class="form-control" placeholder="Email của bạn">
                                    <button type="submit" id="submit-newsletter"><i class="ti-angle-double-right"></i></button>
                                </div>
                            </div>
                            <div class="follow_us">
