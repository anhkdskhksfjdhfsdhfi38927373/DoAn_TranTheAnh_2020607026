
@{
    ViewBag.Title = "ListproductCategory";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    List<Product> ListProducts = ViewBag.list;
}
<div class="main_title">
    <h2>Top Selling</h2>
    <span>Products</span>
    <p>Cum doctus civibus efficiantur in imperdiet deterruisset</p>
</div>
<div class="row small-gutters">
    
    @foreach (var product in ListProducts)
    {
        <div class="col-6 col-md-4 col-xl-3">
            <div class="grid_item">
                <figure>
                    <span class="ribbon off">@product.SaleOff %</span>
                    <a href="@Url.Action("DetailProduct","Page",new {id=product.ProductID})">
                        <img class="img-fluid lazy" src="~/assets/img/products/product_placeholder_square_medium.jpg" data-src="~/assets/img/products/shoes/1.jpg" alt="" width="400" height="400">
                        <img class="img-fluid lazy" src="~/assets/img/products/product_placeholder_square_medium.jpg" data-src="~/assets/img/products/shoes/1_b.jpg" alt="" width="400" height="400">
                    </a>
                    <div data-countdown="2019/05/15" class="countdown"></div>
                </figure>
                <div class="rating"><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star"></i></div>
                <a href="~/assets/product-detail-1.html">
                    <h3>@product.ProductName</h3>
                </a>
                <div class="price_box">
                    <span class="new_price">
                       @product.newprice(product.Price, product.SaleOff);
                    </span>
                    <span class="old_price">@product.Price</span>
                </div>
                <ul>
                    <li><a href="~/assets/#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to favorites"><i class="ti-heart"></i><span>Add to favorites</span></a></li>
                    <li><a href="~/assets/#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to compare"><i class="ti-control-shuffle"></i><span>Add to compare</span></a></li>
                    <li><a href="~/assets/#0" class="tooltip-1" data-bs-toggle="tooltip" data-bs-placement="left" title="Add to cart"><i class="ti-shopping-cart"></i><span>Add to cart</span></a></li>
                </ul>
            </div>
            <!-- /grid_item -->
        </div>
    }

</div>

